{
  "openapi": "3.1.0",
  "info": {
    "title": "Wildberries Assistant API",
    "version": "1.0.0",
    "description": "Ищет товары из магазина на Wildberries по ключевым словам, возвращает до 5 подходящих позиций."
  },
  "servers": [
    {
      "url": "https://wb-assistant-api.onrender.com"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "summary": "Поиск товаров по ключевому слову",
        "operationId": "searchProducts",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "description": "Ключевое слово (например: простуда, суставы, иммунитет)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный ответ: список подходящих товаров",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "nmID": {
                        "type": "integer"
                      },
                      "url": {
                        "type": "string",
                        "format": "uri"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}